<form class="p-contact-form">
  <% let ary = [
      { label:"※会社名", type:"text", name:"company_name", placeholder:"テキストがはいります"},
      { label:"※お名前", type:"text", name:"department_name", placeholder:"テキストがはいります"}, 
      { label:"※ふりがな", type:"text", name:"your_name", placeholder:"テキストがはいります"}, 
      { label:"※メールアドレス", type:"text", name:"your_kana", placeholder:"テキストがはいります"}
      ] %>
  <% ary.forEach(function (value) { %>
  <div class="p-contact-form__row">
    <div class="p-contact-form__head">
      <p class="p-contact-form__heading"><%= value.label %></p>
    </div>
    <div class="p-contact-form__text">
      <input type="<%= value.type %>" name="<%= value.name %>" placeholder="<%= value.placeholder %>">
    </div>
  </div>
  <% }); %>
  <div class="p-contact-form__row">
    <div class="p-contact-form__head">
      <p class="p-contact-form__heading">※お問い合わせ内容</p>
    </div>
    <div class="p-contact-form__text">
      <textarea name="content_detail" placeholder="テキストがはいります"></textarea>
    </div>
  </div>
  <button type="submit" name="submit" value="send" class="button01 p-contact-form__button">送信</button>
</form>