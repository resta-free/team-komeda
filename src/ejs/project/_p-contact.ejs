<dl class="p-contact">
  <% let ary = [
      { label:"会社名", type:"text", name:"company_name", placeholder:"テキストがはいります"},
      { label:"部署名", type:"text", name:"department_name", placeholder:"テキストがはいります"}, 
      { label:"お名前", type:"text", name:"your_name", placeholder:"テキストがはいります"}, 
      { label:"ふりがな", type:"text", name:"your_kana", placeholder:"テキストがはいります"}
      ] %>
  <% ary.forEach(function (value) { %>
  <div class="p-contact__row">
    <dt class="p-contact__head">
      <p class="p-contact__heading"><%= value.label %></p>
    </dt>
    <dd class="p-contact__text">
      <input type="<%= value.type %>" name="<%= value.name %>" placeholder="<%= value.placeholder %>">
    </dd>
  </div>
  <% }); %>
  <div class="p-contact__row">
    <dt class="p-contact__head">
      <p class="p-contact__heading">お問い合わせ内容</p>
    </dt>
    <dd class="p-contact__text">
      <textarea name="content_detail" placeholder="テキストがはいります"></textarea>
    </dd>
  </div>
</dl>
<div class="p-contact__button-wrap">
  <button type="submit" name="submit" value="send" class="button01">送信</button>
</div>